scrollback 10000

defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8

escape ^Jj
bind n screen
bind h prev
bind j next
bind l windowlist

termcap kterm hs@
terminfo kterm hs@
vbell off
bell_msg "Bell in window %^G"
bind w windowlist -b
hardstatus alwayslastline "%{= wk} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wb}%y/%m/%d %{=b wb}%c"
shell -$SHELL
startup_message off
autodetach on

